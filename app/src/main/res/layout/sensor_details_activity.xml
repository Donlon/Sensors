<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/sensordetailsactivityLinearLayout1">

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor name"
            android:textSize="18sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="Sensor name 2"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/tvHead2"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="values"
            android:layout_width="wrap_content"
            android:layout_below="@id/tvHead"
            android:id="@+id/tvValues"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sensordetailsactivityLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Back"/>

        <Button
            android:id="@+id/bthRecode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Recode"/>

        <Button
            android:id="@+id/butnPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Pause"/>

    </LinearLayout>

</LinearLayout>

